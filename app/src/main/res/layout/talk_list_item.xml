<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_selector"
    android:orientation="horizontal"
    android:padding="11.5sp">

    <LinearLayout
        android:id="@+id/talkInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/arrow"
        android:layout_toStartOf="@+id/arrow"
        android:orientation="vertical">


        <TextView
            android:id="@+id/speakerDisplayName"
            style="@style/boldDisplayName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Martin Odersky" />

        <TextView
            android:id="@+id/talkTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The evolution of Scala"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/talkRoom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="wrap_content"
        android:layout_height="14sp"
        android:scaleType="fitEnd"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/arrow" />

</RelativeLayout>