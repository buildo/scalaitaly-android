<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

    </style>

    <style name="roundedImage">
        <item name="android:layout_width">82sp</item>
        <item name="android:layout_height">82sp</item>
    </style>

    <style name="talkDetailRightColumn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/talkDetailRightColumnLeftPadding</item>
        <item name="android:layout_marginLeft">82sp</item>
        <item name="android:paddingRight">5sp</item>
    </style>

    <style name="roundedImage.talkDetail">
        <item name="android:paddingLeft">15sp</item>
        <item name="android:paddingRight">15sp</item>
    </style>

    <style name="boldDisplayName">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="timeInCircularImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
